<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fl_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="-2dp"
    android:paddingBottom="28dp"
    android:background="@drawable/header_home"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_cosnure_header"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:src="@drawable/ic_consure_header_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_consure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tagline"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_consure"
        app:layout_constraintStart_toStartOf="@id/tv_consure"/>

    <ImageView
        android:id="@+id/iv_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="4dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_notif_on"
        app:layout_constraintTop_toTopOf="@id/tv_consure"
        app:layout_constraintBottom_toBottomOf="@id/tv_tagline"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
