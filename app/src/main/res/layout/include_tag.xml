<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFEEEEEE"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingHorizontal="6dp">

        <ImageView
            android:id="@+id/iv_tag_expertise"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_tag_expertise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <TextView
            android:id="@+id/tv_tag_expertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/inter"
            android:textSize="10sp"
            android:textColor="@color/font_secondary"
            app:layout_constraintStart_toEndOf="@id/iv_tag_expertise"
            app:layout_constraintTop_toTopOf="@id/iv_tag_expertise"
            app:layout_constraintBottom_toBottomOf="@id/iv_tag_expertise"
            tools:text="Scholarship"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>